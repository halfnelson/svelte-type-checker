    "version": "0.2.0",
    "configurations": [
        {
            "type":"node",
            "processId": "${command:PickProcess}",
            "name": "Attach",
            "request": "attach"

        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}